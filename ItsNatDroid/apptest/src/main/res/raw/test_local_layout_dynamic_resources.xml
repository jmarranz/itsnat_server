<org.itsnat.itsnatdroidtest.testact.util.CustomScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.itsnat.itsnatdroidtest.MainActivity">
    <!--
        "#dddddd" gris claro
        "#ffdddd" rosa
        "#aaaaaa" gris oscuro
        "#55ddffdd" verde claro
        "#eeee55" amarillo
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <Button
            android:id="@id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK" />

        <Button
            android:id="@id/buttonReload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_reload" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="BitmapDrawable (image in center)"
            android:textSize="20dp"
            android:background="@assets:drawable/res/drawable/test_bitmap_drawable.xml" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="BitmapDrawable 2 (image repeated)"
            android:textSize="20dp"
            android:background="@assets:drawable/res/drawable/test_bitmap_drawable_2.xml" />

        <TextView
            android:id="@+id/testClipDrawableId"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="ClipDrawable (half img)"
            android:textSize="20dp"
            android:background="@assets:drawable/res/drawable/test_clip_drawable.xml" />

        <TextView
            android:id="@+id/testClipDrawableId2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="ClipDrawable 2 (half img)"
            android:textSize="20dp"
            android:background="@assets:drawable/res/drawable/test_clip_drawable_2.xml" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="ColorDrawable (gray)"
            android:textSize="20dp"
            android:background="@assets:drawable/res/drawable/test_color_drawable.xml" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="NinePatchDrawable (border must be green)"
            android:textSize="20dp"
            android:background="@assets:drawable/res/drawable/test_nine_patch_drawable.xml" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="LayerDrawable (2 green rects and centered img)"
            android:textSize="20dp"
            android:background="@assets:drawable/res/drawable/test_layer_drawable.xml" />

    </LinearLayout>

</org.itsnat.itsnatdroidtest.testact.util.CustomScrollView>
