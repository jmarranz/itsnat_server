<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <servlet>
        <servlet-name>inexpservlet</servlet-name>
        <servlet-class>inexp.inexpservlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>inexpservlet</servlet-name>
        <url-pattern>/inexpservlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ItsNatGroovyServlet</servlet-name>
        <servlet-class>inexp.groovyex.ItsNatGroovyServlet</servlet-class>
        <init-param>
            <param-name>scriptRootPath</param-name>
            <param-value>groovyex/code</param-value>
        </init-param>
        <init-param>
            <param-name>initScript</param-name>
            <param-value>inexp/groovyex/groovy_servlet_init.groovy</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>ItsNatGroovyServlet</servlet-name>
        <url-pattern>/groovyex</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ItsNatJReloadServlet</servlet-name>
        <servlet-class>inexp.jreloadex.JReloadExampleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ItsNatJReloadServlet</servlet-name>
        <url-pattern>/jreloadex</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>inexpservlet</welcome-file>
    </welcome-file-list>
</web-app>
